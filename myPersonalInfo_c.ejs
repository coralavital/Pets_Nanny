<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head'); %>
	<link rel="stylesheet" href="styling/index.css"></link>
	<link rel="stylesheet" href="styling/areaCities.css"></link>

</head>
<body class="container">

<header>
	<%- include('../partials/header'); %>
</header>

<main>
	  <div class="row">
		<div class="col-sm-8">
			<div class="jumbotron">
				<h1 style='margin-top: 6%;'>Edit your personal info</h1>
				<%- include('../partials/clientD'); %>
				<br>
				<br>
				<br>
				<% if (editFlag.edit == false) { %>
					<script>
						var elems = document.querySelectorAll('[id="field"]');
						for (let i = 0; i < elems.length; i++) {
							elems[i].disabled = true;
						}
					</script>
				<% } else { %>
					<script>
						var elems = document.querySelectorAll('[id="field"]');
						for (let i = 0; i < elems.length; i++) {
							elems[i].disabled = false;
						}
					</script>
				<% } %>
				

			</div>
			<style>
				#edit, #cancel, #save{
					width: 20%;
					height: 40px;
					margin: 10px auto;
					justify-content: center;
					display: block;
					color: #fff;
					background: #573b8a;
					font-size: 1em;
					font-weight: bold;
					margin-top: 20px;
					outline: none;
					border: none;
					border-radius: 10px !important;
					transition: .2s ease-in;
					cursor: pointer;
				}
				#edit:hover, #cancel:hover, #save:hover{
					background: #6d44b8;
				}
			</style>
			
		</div>
		<%- include('../partials/sidebar'); %>
	</div>
	</div>
</main>

<footer>
	<%- include('../partials/footer'); %>
</footer>
  
</body>
</html>