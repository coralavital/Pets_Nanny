<% if (editFlag.edit == false) { 
	var action = "edit"
 } else { 
	var action = "updateP"
 }%>

<form  method="post" action=<%= action %>>
	<div class="row">
		<div class="col">
			<div class="mb-3"><label class="form-label" for="username"><strong>Full name</strong></label><input placeholder= "<%= fullname %>" class="form-control" type="text" id="username" name="fullname" disabled=""></div>
		</div>
		<div class="col">
			<div class="mb-3"><label class="form-label" for="email"><strong>Email Address</strong></label><input placeholder="<%= email %>" class="form-control" type="email" id="email" name="email" disabled=""></div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div class="mb-3"><label class="form-label" for="age"><strong>Age</strong><br></label><input class="form-control" type="text" id="field" placeholder="<%= age %>" name="age" maxlength='2' disabled=""></div>
		</div>
		<div class="col">
			<div class="mb-3"><label class="form-label" for="phone_number"><strong>Phone number</strong><br></label><input placeholder="<%= phonenumber %>" class="form-control" type="text" name="phonenumber" disabled=""></div>
		</div>
	</div>
	<div class="row">
		<div class="slidecontainer mb-3">
			<strong>Price per hour</strong>
			<p><span id="demo"></span>â‚ª</p>
			<input type="range" min="1" max="200" value="<%= price %>" class="slider" id="myRange" disabled name="price">
			<script>
				var slider = document.getElementById("myRange");
				var output = document.getElementById("demo");
				output.innerHTML = slider.value;
			
				slider.oninput = function() {
					output.innerHTML = this.value;
				}
			</script>
</div>
</div>
<div class='row'>
	<div class="mb-3" >
		<strong>Area/Cities</strong>
		<div class="mb-3 float-center" id="field"> 
            <select class="selectpicker" value='6' id='field' class="field" multiple data-live-search="true" title='<%= area_city %>' disabled name ="area_city" >
				<option disabled>Area</option>
				<% for(var i = 0 ; i < 3 ; i++) { %>
					<option><%= areasCities[i] %></option>
				<% }; %>
				<option disabled>Cities</option>
				<% for(var i = 3 ; i < areasCities.length ; i++) { %>
					<option><%= areasCities[i] %></option>
				<% }; %>
			</select>
		</div>
</div>
</div>

<div id="row">
	<div class="mb-3">
		<div class="col-md-6"><strong>Type of pets</strong><br>
			<select class="selectpicker" multiple data-live-search="true" title='<%= type_of_pet %>' id="field" disabled name="typeP">
				<option disabled>Type of pets</option>
				<option id ='type_dog'>Dog</option>
				<option id ='type_dog'>Cat</option>
				<option id ='type_other'>Other pet</option>
			</select>
		</div>
	</div>
		<div class="mb-3">
			<label class="col-md-6"><strong>Type of service</strong><br>
			<select class="selectpicker" multiple data-live-search="true" title='<%= type_of_service %>' id="field" disabled name="typeS">
				<option disabled>Type of Service</option>
				<option  id='take_for_walk'>Take for a walk</option>
				<option  id='keep_at_home' >Keep at home</option>
			</select> 
		</div>
</div>
</br>
<div class="row">
	<div class="mb-3" >
		<label class="form-label" for="about_me"><strong>About me</strong><br></label>
		<div class="mb-3">
			<textarea class="about_me" idi='field' placeholder="<%= about_me %>" maxlength="250" name="about_me" id="field" disabled=""></textarea>
	</div>
</div>
</div>
<% if (editFlag.edit == false) { %>
	<button class="btn btn-primary btn-sm border rounded-pill float-end align-content-center" id='edit' type="submit">Edit</button>
</form>
<% } else { %>
	<button class="btn btn-primary btn-sm border rounded-pill float-start align-content-center" id='save' type="submit">Save</button>
</form>
	<form action="cancel" method="post">
		<button class="btn btn-primary btn-sm border rounded-pill float-end align-content-center" id='cancel' type="submit" >Cancel</button>
	</form>
<% } %>

