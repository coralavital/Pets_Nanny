<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head'); %>
	<link rel="stylesheet" href="styling/index.css"></link>
</head>
<body class="container">

<%- include('../partials/errorMsg'); %>

<main>
  <div class="jumbotron">
	<div id="content">
		<h3 class="text-dark mb-0" style='font-weight: bolder; font-size: 30px;'>Enter your personal info</h3>
		<h6 class="text-dark mb-0" style='color: red !important;'>* You have mandatory fields</h6>
		</br>
		</br>
		<div class="container">
			<div class="col text-center">
				<div class="card shadow mb-3">
					<div class="card-body text-center">
						<form id='enter-personal-info' action="/personalInfo_client" method="post">
							<%- include('../partials/NamePhoneAgeEmail'); %>
                            <br>
                            <div class="row">
                                <div class="mb-3"><label class="form-label" for="address"><strong>Address </strong><strong style='color: red !important; font-size: 1.2rem;'>*</strong><br></label><input class="form-control" type="text" id="address" placeholder="Enter your address" name="address" required/></div>
                            </div>
							<br>
							<%- include('../partials/about_me'); %>
						</div>
					</div>
					<button class="btn btn-primary btn-sm border rounded-pill float-end align-content-center" id='save' type="submit">Save</button>
				</form>
			</div>
			
		</div>
	</div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
<style>
	.form-control {
		width: 50% !important;
		margin-left: auto;
		margin-right: auto;
		font-size: 15px;
	}
	#address{
		width: 100% !important;
	}
	.pcoded {
		display: none;
	}

	/* to center the address  */
	.mb-3 {
		margin-left: auto;
		margin-right: auto;
	}
	#save {
		width: 20%;
		height: 40px;
		margin: 10px auto;
		justify-content: center;
		display: block;
		color: #fff;
		background: #573b8a;
		font-size: 1em;
		font-weight: bold;
		margin-top: 20px;
		outline: none;
		border: none;
		border-radius: 5px;
		transition: .2s ease-in;
		cursor: pointer;
