<div class="container w-70">
	<table class="table table-gray" name='searchTable' id="table">
		<thead>
			<th>No.</th>
			<th>Full name</th>
			<th>Age</th>
			<th>Phone number</th>
			<th>Price per half hour </th>
			<th>buttons</th>
			<!-- need to display only type of user 1 -->
			<tbody>
				<form action='selectProvider' method='post'>	
					<% for(var j = 0 ; j < providers.length ; j++){ %>
						<tr class='rows' name='rows'>
						<td> <%= j+1 %> </td>
						<td> <%= providers[j].fullname%> </td>
						<td> <%= providers[j].age%> </td>
						<td> <%= providers[j].phonenumber%> </td>
						<td> <%= (providers[j].price_per_hour)/2 %> </td>
						<!-- need to add class to buttons -->
						<td> 
							<% if (userData.typeOfUser == 0) { %>
								
								<button id="myBtn" type="submit" name='invite' onclick='invitebtn()' value="<%= j %>">Invite</button> 
								<a href='mailto:<%= providers[j].email %>'><button type="button" id="myBtn1"> Send Email</button> </a>
								<button id="myBtn2" onclick='profilebtn()'> Profile</button></td>
							<% } else { %>
								<button id="myBtn2" onclick='profilebtn()'> Profile</button></td>
							<% } %>
						</tr>
					<% }  %>
				</form>
			</tbody>
		</thead>
	</table>

</div> 
<!-- pop up for invite  -->
<div id="inviteModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick='inviteClose()'>&times;</span>
        <h1>Petâ€™s-Nanny Reservation</h1>
        <br>
		<form action="addReservation" method="post">
			<p id="fullname"></p>
			<p id="phonenumber"></p>
			<p id="pricePerHour"></p>
			<p>Address <%= userData.address %></p>
			<p>Date: <%= time.date %> From: <%= time.from %> To:<%= time.to %></p>

			<p><center>Are you sure that want to reserve the provider?</center></p>
			<div class="invitButton">
				<button id = "confirm" type="submit"> Confirm </button>
			</div>  
		</form>
		<div class="invitButton">
			<button id = "cancel" onclick="inviteClose()"> Cancel </button>
		</div>  
    </div>
</div>

<!-- pop up for profile  -->
<div id="profileModal" class="modal">
	<div class="modal-content">
		<span class="close" onclick='profileClose()'>&times;</span>
		<h1>Details of the provider </h1>
		<br>
		<p id="name"></p>
		<p id="pemail"></p>
		<p id="phone"></p>
		<p id="age"></p>
		<p id="price"></p>
		<p id="areacity"></p>
		<p id="typeSe"></p>
		<p id="typePe"></p>

	</div>
</div>
<style>
